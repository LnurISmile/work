@model CollegeListViewModel

@section Css
{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.0/css/dataTables.bootstrap5.min.css">
}

<div class="row m-2">
    <h1 class="h3 mt-3"><i class="fas fa-university"></i> Kollec Bölməsi</h1>
    <hr />
    <a href="/admin/user/studyeditlist/@Model.UserId" class="btn btn-outline-dark btn-sm mr-2">Geri</a>
</div>

<div class="row mt-2">
    <a href="/admin/create/college/@Model.UserId" class="btn btn-outline-primary btn-sm mb-2"><i class="fas fa-plus-circle"></i></a>
    <div class="col-md-8">
        <table class="table table-bordered" id="myTable">
            <thead>
                <tr>
                    <td>Kollec</td>
                    <td>İxtisas</td>
                    <td>Başlama</td>
                    <td>Bitirmə</td>
                    <td style="width:150px"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Colleges.Count() > 0)
                {

                    @foreach (var f in Model.Colleges)
                    {
                        <tr>
                            <td>@f.CollegeName</td>
                            <td>@f.CollegeSpecialty</td>
                            <td>@f.College_StartDate</td>
                            <td>@f.College_CompletionDate</td>
                            <td>
                                <a href="/admin/user/collegeedit/@f.Id" class="btn btn-outline-secondary btn-sm mr-2">Tənzimlə</a>

                                <form asp-controller="Admin" asp-action="DeleteUsercol2" method="post" style="display:inline;">
                                    <input type="hidden" name="Id" value="@f.Id" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm mt-1">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        <h3><i class="fas fa-exclamation-triangle"></i> Məlumat yoxdur</h3>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts
{
    <script src="//cdn.datatables.net/1.11.0/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.0/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
