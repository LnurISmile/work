@model SalaryDetailsModel

@section Css
{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.0/css/dataTables.bootstrap5.min.css">
}

<div class="row m-2">
    <h1 class="h3 mt-3"><i class="fas fa-file-invoice-dollar"></i> Maaş Bölməsi</h1>
    <hr />
    <a href="/admin/user/edit/@Model.UserId" class="btn btn-outline-dark btn-sm mr-2">Geri</a>
</div>
<form asp-controller="Admin" asp-action="EditSalaryUser" method="post">
    <div class="row">
        <div class="col-md-12">
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="hidden" name="UserId" value="@Model.UserId" />
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="TimeZoneId">İşləmə müddəti növü</label>
                        <select class="form-control" asp-for="TimeZoneId">
                            <option disabled>Seçin</option>
                            @foreach (var e in Model.TimeZones)
                            {
                                <option value="@e.Id">@e.TableName</option>
                            }
                        </select>
                        <span asp-validation-for="TimeZoneId" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Full_Salary">Aylıq Maaş</label>
                        <input asp-for="Full_Salary" class="form-control" />
                        <span asp-validation-for="Full_Salary" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Hourly_Salary">Saatlıq Maaş</label>
                        <input asp-for="Hourly_Salary" class="form-control" />
                        <span asp-validation-for="Hourly_Salary" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartDate">Başlama Tarixi</label>
                        <input asp-for="StartDate" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndDate">Bitmə Tarixi</label>
                        <input asp-for="EndDate" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-outline-success mt-2">Yadda Saxla</button>
</form>