@model ContactDetailsModel

@section Css
{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.0/css/dataTables.bootstrap5.min.css">
}

<div class="row m-2">
    <h1 class="h3 mt-3"><i class="far fa-address-book"></i> Əlaqə Bölməsi</h1>
    <hr />
    <a href="/admin/user/edit/@Model.UserId" class="btn btn-outline-dark btn-sm mr-2">Geri</a>
</div>

<div class="row mt-2">
    <div class="col-md-4">
        <form asp-controller="Admin" asp-action="EditMP" method="post">
            <input type="hidden" name="UserId" value="@Model.UserId" />
            <h2 class="h4 mt-2"><i class="fas fa-phone-square-alt"></i> Nömrə</h2>
            <div class="form-group">
                <label asp-for="MobileNumber">Nömrə</label>
                <input asp-for="MobileNumber" class="form-control" />
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-success mt-2">Əlavə Et</button>
        </form>
    </div>
    <div class="col-md-5">
        <table class="table table-bordered table-sm" id="myTable1">
            <thead>
                <tr>
                    <td>Nömrə</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Mp.Select(i => i.UserId == Model.UserId).Count() > 0)
                {
                    @foreach (var b in Model.Mp)
                    {
                        @if (Model.UserId == b.UserId)
                        {
                            <tr>
                                <td>@b.MobileNumber</td>
                                <td>
                                    <form asp-controller="Admin" asp-action="DeleteUsermp" method="post" style="display:inline;">
                                        <input type="hidden" name="Id" value="@b.Id" />
                                        <input type="hidden" name="UserId" value="@Model.UserId" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm mt-1">Sil</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        <h3><i class="fas fa-exclamation-triangle"></i> Nömrə Məlumatı Yoxdur</h3>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>
<hr />
<div class="row mt-2">
    <div class="col-md-4">
        <form asp-controller="Admin" asp-action="EditEmail" method="post">
            <input type="hidden" name="UserId" value="@Model.UserId" />
            <h2 class="h4 mt-2"><i class="fas fa-envelope"></i> Email</h2>
            <div class="form-group">
                <label asp-for="Emails">Email</label>
                <input asp-for="Emails" class="form-control" />
                <span asp-validation-for="Emails" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-success mt-2">Əlavə Et</button>
        </form>
    </div>
    <div class="col-md-5">
        <table class="table table-bordered table-sm" id="myTable2">
            <thead>
                <tr>
                    <td>Email</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Em.Select(i => i.UserId == Model.UserId).Count() > 0)
                {
                    @foreach (var b in Model.Em)
                    {
                        @if (Model.UserId == b.UserId)
                        {
                            <tr>
                                <td>@b.Emails</td>
                                <td>
                                    <form asp-controller="Admin" asp-action="DeleteUserem" method="post" style="display:inline;">
                                        <input type="hidden" name="Id" value="@b.Id" />
                                        <input type="hidden" name="UserId" value="@Model.UserId" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm mt-1">Sil</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        <h3><i class="fas fa-exclamation-triangle"></i> Nömrə Məlumatı Yoxdur</h3>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>
<hr />
<div class="row mt-2">
    <div class="col-md-4">
        <form asp-controller="Admin" asp-action="EditSN" method="post">
            <input type="hidden" name="UserId" value="@Model.UserId" />
            <h2 class="h4 mt-2"><i class="fas fa-share-alt"></i> Sosial Şəbəkə</h2>
            <div class="form-group">
                <label asp-for="SocialNetworkName">Sosial Şəbəkə Adı</label>
                <select class="form-control" asp-for="SocialNetworkName">
                    <option selected disabled>Seçin</option>
                    @foreach (var item in Model.Snsl)
                    {
                        <option value="@item.Key">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="SocialNetworkName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link">Link</label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-success mt-2">Əlavə Et</button>
        </form>
    </div>
    <div class="col-md-5">
        <table class="table table-bordered table-sm" id="myTable3">
            <thead>
                <tr>
                    <td>Sosial Şəbəkə</td>
                    <td>Link</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Sn.Select(i => i.UserId == Model.UserId).Count() > 0)
                {
                    @foreach (var b in Model.Sn)
                    {
                        @if (Model.UserId == b.UserId)
                        {
                            <tr>
                                <td>@b.SocialNetworkName</td>
                                <td>@b.Link</td>
                                <td>
                                    <form asp-controller="Admin" asp-action="DeleteUsersn" method="post" style="display:inline;">
                                        <input type="hidden" name="Id" value="@b.Id" />
                                        <input type="hidden" name="UserId" value="@Model.UserId" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm mt-1">Sil</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        <h3><i class="fas fa-exclamation-triangle"></i> Sosial Şəbəkə Yoxdur</h3>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/UserTool.js"></script>
    <script src="//cdn.datatables.net/1.11.0/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.0/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable1').DataTable();
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#myTable2').DataTable();
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#myTable3').DataTable();
        });
    </script>
}