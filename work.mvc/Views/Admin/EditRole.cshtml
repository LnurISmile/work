@model EditRoleModel

<div class="row m-2">
    <h1 class="h3 mt-3"><i class="fas fa-user-tag"></i> Rol Tənzimləməsi</h1>
    <hr />
</div>
<div class="row">
    <div class="col-md-5">

        <form asp-controller="Admin" asp-action="EditRole" method="post">
            <input type="hidden" name="RoleId" value="@Model.RoleId" />
            <div class="form-group">
                <label asp-for="RoleName">Rol adı</label>
                <input asp-for="RoleName" class="form-control" />
            </div>

            <button type="submit" class="btn btn-outline-success mt-2">Yenilə</button>
        </form>
    </div>
</div>