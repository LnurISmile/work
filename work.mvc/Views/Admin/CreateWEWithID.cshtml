@model WorkWIDDetailsModel

<h2 class="h4"><i class="fas fa-briefcase"></i> İş Təcrübəsi</h2>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="CreateWEWithID" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" name="UserId" value="@Model.UserId" />
            <div class="form-group row">
                <label asp-for="Company" class="col-sm-2 col-form-label">Şirkət</label>
                <div class="col-sm-10">
                    <input class="form-control mb-2 mt-2" asp-for="Company">
                    <span asp-validation-for="Company" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Employer" class="col-sm-2 col-form-label">HR</label>
                <div class="col-sm-10">
                    <input class="form-control mb-2" asp-for="Employer">
                    <span asp-validation-for="Employer" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Start" class="col-sm-2 col-form-label">İşə Başlama Tarixi</label>
                <div class="col-sm-10">
                    <input class="form-control mb-2" asp-for="Start">
                    <span asp-validation-for="Start" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Resignation" class="col-sm-2 col-form-label">İşdən Çıxma Tarixi</label>
                <div class="col-sm-10">
                    <input class="form-control mb-2" asp-for="Resignation">
                    <span asp-validation-for="Resignation" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="CVPDF">CV PDF</label>
                <div class="form-group mt-2">
                    <input type="hidden" asp-for="CVPDF" />
                    <input type="file" name="file" class="form-control mt-2" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-outline-primary">Yadda Saxla</button>
                </div>
            </div>
        </form>
    </div>

</div>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/UserTool.js"></script>
}