@model UserDetailsModel

    <div class="row">
        <div class="col-md-12">
            <a href="/admin/user/edit/@Model.UserId" class="btn btn-outline-warning btn-sm mb-2">Geri</a>
        </div>
    </div>
    <div class="row m-2">
        <h3 class="h4 mt-3"><i class="fas fa-user-graduate"></i> Təhsil Bölmələri</h3>
        <hr />
        @foreach (var e in Model.Users)
        {
            if (e.Id == Model.UserId)
            {
                <h3 class="h4 mt-3"><img src="/img/@e.Email/@e.ImgUrl" style="width:100px;" alt="Şəkil yüklənmədi" /> @e.FirstName @e.LastName @e.FatherName</h3>
            }
        }
        <input type="hidden" name="Id" value="@Model.UserId" />
        <hr />
        <span>
            <a href="/admin/user/schooledit/@Model.UserId" class="btn btn-outline-primary btn-sm mb-2"><i class="fas fa-school"></i> Məktəb Siyahısı</a>
            <a href="/admin/college/list/@Model.UserId" class="btn btn-outline-primary btn-sm mb-2"><i class="fas fa-university"></i> Kollec Siyahısı</a>
            <a href="/admin/university/list/@Model.UserId" class="btn btn-outline-primary btn-sm mb-2"><i class="fas fa-user-graduate"></i> Universitet Siyahısı</a>
            <a href="/admin/course/list/@Model.UserId" class="btn btn-outline-primary btn-sm mb-2"><i class="fas fa-layer-group"></i> Kurs Siyahısı</a>
        </span>
    </div>