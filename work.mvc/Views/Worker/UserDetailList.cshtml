@model UserDetailsModel

<div class="row m-2">
    <h3 class="h4 mt-3"><i class="fas fa-info"></i> Ətraflı Məlumat</h3>
    <hr />
    @foreach (var e in Model.Users)
    {
        if (e.Id == Model.UserId)
        {
            <h3 class="h4 mt-3"><img src="/img/@e.Email/@e.ImgUrl" style="width:100px;" alt="Şəkil yüklənmədi" /> @e.FirstName @e.LastName @e.FatherName</h3>
            <span>
                <a href="/admin/create/archive/@Model.UserId" class="btn btn-outline-primary btn-sm mb-2"><i class="far fa-file-archive"></i> Yeni Ödəniş Məlumatı</a>
                <a href="/admin/create/penalty/@Model.UserId" class="btn btn-outline-primary btn-sm mb-2"><i class="fas fa-ban"></i> Yeni Cərimə Əlavə Et</a>
                <a href="/admin/create/bonus/@Model.UserId" class="btn btn-outline-primary btn-sm mb-2"><i class="fas fa-hand-holding-usd"></i> Bonus Əlavə Et</a>
            </span>
        }
    }
    <input type="hidden" name="Id" value="@Model.UserId" />
    <hr class="mt-2"/>
    <span>
        <a href="/user/idcard/@Model.UserId" class="btn btn-outline-primary btn-sm mb-2"><i class="far fa-id-card"></i> Şəxsiyyə V. Bölməsi</a>
        <a href="/user/family/@Model.UserId" class="btn btn-outline-primary btn-sm mb-2"><i class="fas fa-home"></i> Ailə Bölməsi</a>
        <a href="/user/bodydimensions/@Model.UserId" class="btn btn-outline-primary btn-sm mb-2"><i class="fas fa-user-alt"></i> Bədən Ölçüləri</a>
        <a href="/user/study/@Model.UserId" class="btn btn-outline-primary btn-sm mb-2"><i class="fas fa-user-graduate"></i> Təhsil Bölməsi</a>
        <a href="/user/workexp/@Model.UserId" class="btn btn-outline-primary btn-sm mb-2"><i class="fas fa-briefcase"></i> İş Təcrübəsi</a>
        <a href="/user/drivinglicense/@Model.UserId" class="btn btn-outline-primary btn-sm mb-2"><i class="fas fa-car"></i> Sürücülük Bölməsi</a>
        <a href="/user/contact/@Model.UserId" class="btn btn-outline-primary btn-sm mb-2"><i class="far fa-address-book"></i> Əlaqə Bölməsi</a>
        <a href="/user/salary/@Model.UserId" class="btn btn-outline-primary btn-sm mb-2"><i class="fas fa-file-invoice-dollar"></i> Maaş Bölməsi</a>
    </span>
</div>