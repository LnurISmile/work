@model WorkerDetailModel

<div class="row mt-3">
    <div class="col-md-12">
        <span>
            <img style="width:200px;" src="~/img/@Model.User.Email/@Model.User.ImgUrl" class="img-fluid" alt="Yüklənmədi" />
            <h5 class="card-text">@Model.User.FirstName @Model.User.LastName</h5>
        </span>
    </div>
    <div class="col-md-5 mt-2">
        <div class="card">
            <div class="card-body">
                @if (Model.BodyD != null)
                {
                    <p class="h5 card-text">Baş Ölçüsü   : @Model.BodyD.HeadDimension</p>
                    <p class="h5 card-text">Üst Bədən Ölçüsü : @Model.BodyD.BodyDimensionUp</p>
                    <p class="h5 card-text">Alt Bədən Ölçüsü : @Model.BodyD.BodyDimensionDown</p>
                    <p class="h5 card-text">Ayaq Ölçüsü  : @Model.BodyD.FootSize</p>
                    <p class="h5 card-text">Boy          : @Model.BodyD.Height</p>
                    <p class="h5 card-text">Çəki         : @Model.BodyD.Weight</p>
                }
                else
                {
                    <p class="h4 card-text">Hər hansı məlumat yoxdur</p>
                    <p class="h5 card-text">Baş Ölçüsü   : </p>
                    <p class="h5 card-text">Bədən Ölçüsü : </p>
                    <p class="h5 card-text">Ayaq Ölçüsü  : </p>
                    <p class="h5 card-text">Boy          : </p>
                    <p class="h5 card-text">Çəki         : </p>
                }
            </div>
        </div>
    </div>
